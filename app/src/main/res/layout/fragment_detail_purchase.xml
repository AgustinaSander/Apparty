            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="@color/dark_blue"
            app:dividerThickness="2dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:weightSum="3">

